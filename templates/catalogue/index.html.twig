{% extends 'base.html.twig' %}

{% block title %}Notre catalogue de formation{% endblock %}

{% block body %}
    <div class="container marketing">

        <hr class="featurette-divider">
        {% for formation in formations %}
            <div class="row featurette">
                <div class="col-md-7">
                    <h2 class="ver featurette-heading">{{formation.titre}}</h2>
                    <p class="cali lead">{{formation.description}}</p>
                    <a><button class="btn orange">voir plus</button></a>
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-2 ">
                    <img src="{{formation.PhotoPF}}" class="photoF-catalogue"></img>
                </div>
            </div>

            <hr class="featurette-divider">
        {%endfor%}
        <div class="d-flex justify-content-center"> 
            {% do formations.setPageRange(2) %}
            {{ knp_pagination_render(formations, 'base/pagination.html.twig') }}
        </div>
    </div>
    
{% endblock %}
